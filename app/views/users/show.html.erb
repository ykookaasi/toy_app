<% provide(:title, @user.name) %>
<div class="row">
  <aside class="col-md-4">
    <section class="user_info">
      <h1>
         <%= gravatar_for @user %>
        <%= @user.name %>
      </h1>
      <p>
        <strong>Email:</strong>
        <%= @user.email %>
      </p>

      <p>
        <strong>Created:</strong>
        <%= @user.created_at %>
      </p>

      <p>
        <strong>Updated:</strong>
        <%= @user.updated_at %>
      </p>

      <p>
        <%= Time.now %>
      </p>
    </section>
  </aside>
</div>
<p id="notice"><%= notice %></p>




